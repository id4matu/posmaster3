<h1>Listing abcs</h1>

<table border="1">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @abcs.each do |abc| %>
  <tr>
    <td><%= abc.code %></td>
    <td><%= abc.name %></td>
    <td><%= abc.value %></td>
    <td><%= link_to 'Show', abc %></td>
    <td><%= link_to 'Edit', edit_abc_path(abc) %></td>
    <td><%= link_to 'Destroy', abc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

